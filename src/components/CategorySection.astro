---
// src/components/CategorySection.astro
import SiteCard from './SiteCard.astro';

interface Props {
  category: string;
  displayName: string; 
  icon: string;       
  sites: Array<any>;
}
const { displayName, icon, sites } = Astro.props;


---

<div class="category-section">
  <h4 class="text-gray text-lg mb-4">
    <i class={`${icon} mr-1`}></i> 
    {displayName} 
  </h4>
  <div class="row">
    {sites.map((site) => (
      <SiteCard data={site} />
    ))}
  </div>
</div>

