---
// src/components/CategorySection.astro
import SiteCard from './SiteCard.astro';

interface Props {
  category: string;
  subCategoryName?: string;
  subCategoryIcon?: string;
  sites: Array<{
    name: string;
    url: string;
    icon?: string;
    description?: string;
    // 其他站点属性...
  }>;
}

const { category, subCategoryName, subCategoryIcon, sites } = Astro.props;
---

<div class="category-section" id={`category-${category.toLowerCase().replace(/\s+/g, '-')}`}>
  <h4 class="text-gray text-lg mb-4">
    {subCategoryIcon && <i class={`${subCategoryIcon} mr-1 fa-lg`}></i>}
    {subCategoryName && subCategoryName}
  </h4>
  <div class="row">
    {sites.map((site) => (
      <SiteCard data={site} />
    ))}
  </div>
</div>
