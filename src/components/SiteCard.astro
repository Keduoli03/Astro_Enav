---
// src/components/SiteCard.astro
interface SiteCardProps {
  url?: string;
  title?: string;
  description?: string;
  id?: string;
  logo?: string;
  showDirectLink?: boolean;
}

// 提供完整的默认值
const defaultData: Required<SiteCardProps> = {
  url: "#",
  title: "未命名网站",
  description: "暂无描述",
  id: "",
  logo: "/images/logos/default.webp",
  showDirectLink: true
};

// 安全解构（确保所有字段都有值）
const {
  url,
  title,
  description,
  id,
  logo,
  showDirectLink
} = {
  ...defaultData,
  ...Astro.props.data
};
---

<div class="url-card col-6 col-sm-6 col-md-4 col-xl-5a col-xxl-6a">
  <div class="url-body default">
    <!-- 主卡片链接 -->
    <a 
      href={url} 
      target="_blank" 
      data-id={id}
      data-url={url}
      class="card no-c mb-4"
      data-toggle="tooltip"
      data-placement="bottom"
      title={description}
    >
      <div class="card-body">
        <div class="url-content d-flex align-items-center">
          <!-- 网站图标 -->
          <div class="url-img mr-2 d-flex align-items-center justify-content-center">
            <img 
              class="lazy" 
              src="/images/logos/default.webp" 
              data-src={logo}
              onerror="this.src='/images/logos/default.webp'" 
              alt={title}
              loading="lazy"
              width="40"
              height="40"
            />
          </div>
          
          <!-- 网站信息 -->
          <div class="url-info flex-fill">
            <div class="text-sm overflowClip_1">
              <strong>{title}</strong>
            </div>
            <p class="overflowClip_1 m-0 text-muted text-xs">{description}</p>
          </div>
        </div>
      </div>
    </a>

    <!-- 直达链接 -->
    {showDirectLink && (
      <a 
        href={url} 
        class="togo text-center text-muted is-views" 
        data-id={id}
        data-toggle="tooltip" 
        data-placement="right" 
        title="直达" 
        rel="nofollow"
      >
        <i class="iconfont icon-goto"></i>
      </a>
    )}
  </div>
</div>
